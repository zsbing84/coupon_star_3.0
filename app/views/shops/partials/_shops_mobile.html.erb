
<center>
	<div class="display_items_count_info"">
	  ショップ数: <%= @count %>
	</div>
	 <br />
</center>

<% for shop in @shops %>
	<% if !shop.photo_file_name.nil? %>
		<div class="item_image">
				<%= image_tag shop.photo.url(:thumb) %>
		</div>
	<% else %>
		<div class="sample_shop_image"></div>
	<% end %>
  <span class="shop_coupons" ">
		<%= link_to "クーポン一覧へ", display_coupons_shop_path(shop) %>
	</span><br />
	<span>
		<%= link_to shop.name, shop, :class => "shops_name"%><br /><br />
	</span>
	<div style="clear: both;"></div>
  <span class="shop_followers_count">
    	フォロワー数： <%= shop.customers.count %>
  </span>
	<% if shop != @shops.last %>
		<div id="dotline"></div>
	<% end %>
<% end %>
<br />
<%= will_paginate @shops %>

