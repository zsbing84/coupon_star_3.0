
<div class="top_division">ログイン</div>
<br />

<%= render 'shared/error_messages_mobile', :object => @customer_session %>
<%= form_for @customer_session do |f| %>
	<%= f.label :email, "メールアドレス：", :class => "input_label" %>
  <%= f.text_field :email, :class => "input_field" %>
	<br /><br />
	<%= f.label :password, "パスワード：", :class => "input_label" %>
	<%= f.password_field :password, :class => "input_field" %>
	<div class="login_checkbox">
  	<%= f.check_box :remember_me%>ログイン状態を保持する
	</div>
	<center>
  	<%= f.submit "ログイン", :class => "input_submit" %>
	</center>
	<div class="login_reset_pwd">
  	<%= link_to "パスワードを忘れた方はコチラ", new_customer_password_reset_path %>
	</div>
<% end %>

