

<form action="/coupon_analysis" method='get' >
	<center>
		<%= select_tag 'record_id', options_from_collection_for_select(CouponAnalysisRecord.where("coupon_id = ?", @coupon.id), :id, :name, @record.id), :class => "target" %>
	  <span class="separator"></span>
		<%= select_tag 'general_id', options_from_collection_for_select(CouponChartDisplayGeneral.find(:all), :id, :name, @general.id) %>
	  <span class="separator"></span>  <span class="separator"></span>
	  <%= hidden_field_tag 'id', @coupon.id %>
		<%= submit_tag "レコード表示", :class => "link_button"%>
		<% if !@record.is_current? %>
			<div class="destroy">
				<%= link_to "表示中レコード削除", @record, :method => :delete,
							:confirm => "#{@record.name}を永久に削除してよろしいでしょうか?",
			                             	:title => "Delete #{@record.name}",
			                             	:class => "link_button"%>
			</div>
		<% end %>
	</center>
</form>

